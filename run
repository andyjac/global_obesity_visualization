#!/bin/bash

export NODE_ENV=development

echo ''
echo '* INTALLING PACKAGES'
echo ''

npm install

echo ''
echo '* BUILDING DATABASE'
echo ''

node --max-old-space-size=8192 ./setup/index.js

echo ''
echo '* BUILDING CLIENT'
echo ''

gulp build

echo ''
echo '* RUNNING SERVER'
echo ''

node ./app.js
